<h1>Submit your own Recipe!</h1>

<%= render('layouts/errors', :object => @entry) %>

<form action="/entries" method="post">
  <%= render('form') %>
  <% @tags.each do |tag| %>
    <br><input type="checkbox" name="entries_tags[tag<%= tag.id %>]" value="<%= tag.id %>"><%= tag.name %>
  <% end %>
  <br><button class = "btn btn-primary">Add recipe</button>
</form>
